{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer",
  "description": "A schema representing a customer for a POST request",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 1,
      "description": "The customer's given name."
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "description": "The customer's family name."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "A valid email address for the customer."
    },
    "phoneNumber": {
      "type": "string",
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "description": "International E.164 format phone number."
    },
    "dateOfBirth": {
      "type": "string",
      "format": "date",
      "description": "ISO 8601 formatted date (YYYY-MM-DD)."
    },
    "address": {
      "type": "object",
      "properties": {
        "street": { "type": "string" },
        "city": { "type": "string" },
        "postalCode": { "type": "string" },
        "country": { "type": "string" }
      },
      "required": ["street", "city", "country"]
    },
    "customerType": {
      "type": "string",
      "enum": ["individual", "corporate"],
      "default": "individual"
    }
  },
  "required": ["firstName", "lastName", "email"],
  "additionalProperties": false
}